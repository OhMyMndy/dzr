{
	"name": "dzr",
	"displayName": "DZR player",
	"description": "deezer.com player",
	"version": "0.0.1",
	"publisher": "yne",
	"engines": {
		"vscode": "^1.73.0"
	},
	"main": "./main.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"viewsWelcome": [
			{
				"view": "explorer.dzr",
				"contents": "not shown"
			}
		],
		"keybindings (displayed but dont work)": [
			{
				"command": "dzr.remove",
				"key": "delete"
			}
		],
		"commands": [
			{
				"category": "dzr",
				"command": "dzr.show",
				"title": "Show Player Tab",
				"icon": "$(eye)"
			},
			{
				"category": "dzr",
				"command": "dzr.play",
				"title": "Play",
				"icon": "$(debug-run)"
			},
			{
				"category": "dzr",
				"command": "dzr.pause",
				"title": "Pause",
				"icon": "$(debug-pause)"
			},
			{
				"category": "dzr",
				"command": "dzr.next",
				"title": "Play next",
				"icon": "$(chevron-right)"
			},
			{
				"category": "dzr",
				"command": "dzr.loopAll",
				"title": "Loop all Enable",
				"icon": "$(sync)"
			},
			{
				"category": "dzr",
				"command": "dzr.loopOff",
				"title": "Loop all Disable",
				"icon": "$(sync-ignored)"
			},
			{
				"category": "dzr",
				"command": "dzr.add",
				"title": "Queue Add",
				"icon": "$(add)"
			},
			{
				"category": "dzr",
				"command": "dzr.remove",
				"title": "Queue Remove",
				"icon": "$(close)"
			},
			{
				"category": "dzr",
				"command": "dzr.removeAt",
				"title": "Queue Remove",
				"icon": "$(close)"
			},
			{
				"category": "dzr",
				"command": "dzr.clear",
				"title": "Queue Clear",
				"icon": "$(clear-all)"
			},
			{
				"category": "dzr",
				"command": "dzr.shuffle",
				"title": "Queue Shuffle",
				"icon": "$(arrow-swap)"
			}
		],
		"menus": {
			"view/title": [
				{
					"when": "view == dzr.queue && dzr.queue!=''",
					"group": "navigation@1",
					"command": "dzr.clear"
				},
				{
					"when": "view == dzr.queue && dzr.queue!=''",
					"group": "navigation@2",
					"command": "dzr.shuffle"
				},
				{
					"when": "view == dzr.queue",
					"group": "navigation@3",
					"command": "dzr.add"
				}
			],
			"view/item/context": [
				{
					"group": "inline",
					"command": "dzr.remove",
					"when": "viewItem == dzr.track"
				},
				{
					"group": "navigation",
					"command": "dzr.remove",
					"when": "viewItem == dzr.track"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "dzr configuration",
			"properties": {
				"dzr.cbc": {
					"type": "string",
					"default": "",
					"description": "track decryption key"
				},
				"dzr.queue": {
					"type": "array",
					"default": [],
					"description": "Persistent track queue"
				},
				"dzr.looping": {
					"type": "boolean",
					"default": false,
					"description": "Queue looping"
				}
			}
		},
		"views": {
			"explorer": [
				{
					"id": "dzr.queue",
					"name": "Player Queue",
					"icon": "play",
					"contextualTitle": "Queue",
					"whenn": "dzr.ready"
				}
			]
		}
	}
}